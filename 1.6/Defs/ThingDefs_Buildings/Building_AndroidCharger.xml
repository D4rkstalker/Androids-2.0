<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>A2_AndroidCharger</defName>
    <label>android charging stand</label>
    <description>A charging stand for recharging androids with batteries. Androids will free up memory while charging</description>
	<thingClass>Androids2.Building_AndroidCharger</thingClass>
	<tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Building/AndroidStand/AndroidStand</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
      <Flammability>1.0</Flammability>
	  <Comfort>0.75</Comfort>
    </statBases>
	<costList>
		<Steel>50</Steel>
	</costList>
    <rotatable>false</rotatable>
    <pathCost>42</pathCost>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
	<designationCategory>Biotech</designationCategory>
    <fillPercent>0.20</fillPercent>
	<building>
		<bed_showSleeperBody>True</bed_showSleeperBody>
		<buildingSizeCategory>Small</buildingSizeCategory>
		<bed_humanlike>true</bed_humanlike>
		<bed_healPerDay>0</bed_healPerDay>
		<bed_defaultMedical>true</bed_defaultMedical>
	</building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>40</basePowerConsumption>
      </li>
		<li Class="CompProperties_AssignableToPawn">
			<drawAssignmentOverlay>false</drawAssignmentOverlay>
			<compClass>CompAssignableToPawn_Bed</compClass>
		</li>
    </comps>
    <researchPrerequisites>
      <li>VREA_AndroidTech</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>