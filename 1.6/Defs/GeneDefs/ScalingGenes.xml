<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <!-- Co-Processors -->
	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_CoProcessor_basic</defName>
		<label>basic co-processor</label>
		<description>A simple secondary processor is installed in the robot's motherboard that allows the main intelligence offload lesser tasks to it</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1500</timeCost>
		<statFactors>
			<WorkSpeedGlobal>1.1</WorkSpeedGlobal>
		</statFactors>
		<exclusionTags>
			<li>A2_CoProcessor</li>
		</exclusionTags>

		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<SubcoreBasic>1</SubcoreBasic>
			<Gold>10</Gold>
		</costList>
	</Androids2.A2GeneDef>
