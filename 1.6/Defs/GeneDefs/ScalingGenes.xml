	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_Hardware_Integration_I</defName>
		<label>hardware integration I</label>
		<description>The robot's normally modular components are integrated, reducing the form factor and allowing the robot's systems to operate more efficiently, at a cost to it's assembly costs</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>5000</timeCost>
		<exclusionTags>
			<li>A2_HardwareIntegration</li>
		</exclusionTags>
		<modExtensions>
			<li Class="Androids2.HardwareIntegration">
				<complexityMult>0.8</complexityMult>
				<timeMult>1.5</timeMult>
				<costMult>1.25</costMult>
			</li>
		</modExtensions>	

	</Androids2.A2GeneDef>

