		<statFactors>
		  <MeleeArmorPenetration>2</MeleeArmorPenetration>
		</statFactors>
		<statOffsets>
			<MiningSpeed>0.25</MiningSpeed>
			<ConstructionSpeed>0.25</ConstructionSpeed>
			<MeleeDamageFactor>1</MeleeDamageFactor>
			<CarryingCapacity>150</CarryingCapacity>
		</statOffsets>
		<costList>
			<Plasteel>5</Plasteel>
			<ComponentSpacer>10</ComponentSpacer>
		</costList>
	</Androids2.A2GeneDef>

</Defs>