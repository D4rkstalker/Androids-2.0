<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_MechFlesh</defName>
		<label>mechanical body</label>
		<description>A robot made of inorganic components. Sturdier than organic components, but lacks the self regenerative properties. Adding the Synthetic Body hardware component overrides the effects of this component</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<statOffsets>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
		</statOffsets>

	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_SynthFlesh</defName>
		<label>synthetic body</label>
		<description>A robot made of synthetic organic components, with the ability to regenerate, but trades it for the ability to be actively repaired</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>500</timeCost>
		<nutrition>100</nutrition>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_SynthWeave</defName>
		<label>synthweave composite</label>
		<description>A layer of hyperweave composite is placed under the robot's exterior skin, giving it a minor increase in survivability</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<statFactors>
			<IncomingDamageFactor>0.9</IncomingDamageFactor>
		</statFactors>
		<costList>
			<Hyperweave>25</Hyperweave>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_HeavyArmor</defName>
		<label>heavy armor</label>
		<description>The robot's normally decorative exterior panels are replaced with plasteel armor plates, light and thin enough to not affect the robot's movement</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>800</timeCost>
		<statOffsets>
			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
			<ArmorRating_Heat>0.25</ArmorRating_Heat>
		</statOffsets>
		<exclusionTags>
			<li>A2_Armor</li>
		</exclusionTags>
		<costList>
			<Plasteel>25</Plasteel>
		</costList>
	</Androids2.A2GeneDef>
	
	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_FortressArmor</defName>
		<label>fortress armor</label>
		<description>The robot's normally decorative exterior panels are replaced with a heavy steel armor plates, allowing it to survive anything smaller than a dedicated anti armor weapon. However it does make the robot bulkier and slower</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>800</timeCost>
		<statOffsets>
			<ArmorRating_Sharp>1.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.50</ArmorRating_Blunt>
			<ArmorRating_Heat>0.25</ArmorRating_Heat>
			<MeleeDamageFactor>0.25</MeleeDamageFactor>
			<MeleeCooldownFactor>0.1</MeleeCooldownFactor>
			<MeleeDodgeChance>-15</MeleeDodgeChance>
			<MoveSpeed>-0.1</MoveSpeed>
		</statOffsets>
		<exclusionTags>
			<li>A2_Armor</li>
		</exclusionTags>
		<costList>
			<Uranium>5</Uranium>
			<Steel>50</Steel>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_AdvancedServos</defName>
		<label>advanced servos</label>
		<description>The robot's standard servos are upgraded with higher speed and precision</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<statFactors>
		  <ShootingAccuracyFactor_Long>1.25</ShootingAccuracyFactor_Long>
		  <ShootingAccuracyFactor_Medium>1.25</ShootingAccuracyFactor_Medium>
		  <ShootingAccuracyFactor_Short>1.25</ShootingAccuracyFactor_Short>
		  <AimingDelayFactor>0.9</AimingDelayFactor>
		<MeleeDamageFactor>1.5</MeleeDamageFactor>
		<MeleeCooldownFactor>-0.5</MeleeCooldownFactor>
		</statFactors>
		<statOffsets>
			<MeleeDodgeChance>15</MeleeDodgeChance>
			<MoveSpeed>0.25</MoveSpeed>
		</statOffsets>
		<costList>
			<Plasteel>5</Plasteel>
			<Gold>5</Gold>
			<ComponentSpacer>10</ComponentSpacer>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_HeavyHydraulics</defName>
		<label>heavy hydraulics</label>
		<description>The robot's pistons are upgraded with stronger hydraulics, making it significantly stronger</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<statFactors>
		  <MeleeArmorPenetration>2</MeleeArmorPenetration>
		</statFactors>
		<statOffsets>
			<MiningSpeed>0.25</MiningSpeed>
			<ConstructionSpeed>0.25</ConstructionSpeed>
			<MeleeDamageFactor>1</MeleeDamageFactor>
			<CarryingCapacity>150</CarryingCapacity>
		</statOffsets>
		<costList>
			<Plasteel>5</Plasteel>
			<ComponentSpacer>10</ComponentSpacer>
		</costList>
	</Androids2.A2GeneDef>
	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_Storage</defName>
		<label>internal storage compartments</label>
		<description>Modular internal storage compartments allows the robot to carry extra stuff</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<statOffsets>
			<VEF_MassCarryCapacity>25</VEF_MassCarryCapacity>
		</statOffsets>
		<costList>
			<Plasteel>15</Plasteel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_Vanometric</defName>
		<label>vanometric power cell</label>
		<description>The robot's reactor is replaced with a vanometric power cell, allowing it to charge passively. WARNING VOLATILE: explodes when the REACTOR part is destroyed, or when the robot dies</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<exclusionTags>
			<li>A2_Battery</li>
		</exclusionTags>
		<costList>
			<VanometricPowerCell>1</VanometricPowerCell>
			<ComponentSpacer>10</ComponentSpacer>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_EltexPsyChip</defName>
		<label>eltex psy-tuning chip</label>
		<description>A specialized eltex psy-tuning chip has been installed into the robot's processor</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<statFactors>
			<PsychicSensitivity>1</PsychicSensitivity>
		</statFactors>
		<exclusionTags>
			<li>VREA_PsychicSensitivity</li>
		</exclusionTags>
		<costList>
			<ComponentSpacer>10</ComponentSpacer>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_SafetyOverrides</defName>
		<label>safety overrides</label>
		<description>Disabling safety protocols increases the robot's performance, but also increases memory space drain, incoming damage and power drain (x3)</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<statFactors>
			<MoveSpeed>2</MoveSpeed>
			<WorkSpeedGlobal>2</WorkSpeedGlobal>
			<IncomingDamageFactor>1.5</IncomingDamageFactor>
			<RangedCooldownFactor>0.5</RangedCooldownFactor>
			<AimingDelayFactor>0.5</AimingDelayFactor>
			<MeleeCooldownFactor>0.5</MeleeCooldownFactor>
		</statFactors>
		<statOffsets>
			<MeleeDodgeChance>15</MeleeDodgeChance>
			<CarryingCapacity>100</CarryingCapacity>
			<VREA_MemorySpaceDrainMultiplier>1</VREA_MemorySpaceDrainMultiplier>
		</statOffsets>
		<costList>
			<ComponentSpacer>10</ComponentSpacer>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_NeutroCatalyst</defName>
		<label>catalytic neutromine regenerator</label>
		<description>Regenerates neutromine, scaling exponentially with amount of stored neutromine in the robot. has no effect if the robot has completely ran out of neutromine</description>
		<geneClass>Androids2.Gene_NeutroCatalyst</geneClass>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<costList>
			<ComponentSpacer>5</ComponentSpacer>
			<Plasteel>25</Plasteel>
			<Silver>50</Silver>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="A2_ModdableHardware">
		<defName>A2_NeuralLock</defName>
		<label>Neural Lock</label>
		<description>[Only has effect in android converter] A hardware lock that suppresses an android's awakaned behaviour, turning them back into a drone. Can be applied to prisoners to recruit them</description>
		<!-- <geneClass>Androids2.Gene_NeuralLock</geneClass> -->
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<timeCost>1200</timeCost>
		<costList>
			<ComponentSpacer>5</ComponentSpacer>
		</costList>
	</Androids2.A2GeneDef>

</Defs>