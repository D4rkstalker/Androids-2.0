<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_BatteryPower</defName>
		<label>battery power</label>
		<description>The robot's reactor has been swapped to a rechargable battery, needs to be recharged at an android charging station. Halves max energy capacity</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
		<timeCost>500</timeCost>
		<costList>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
	</Androids2.A2GeneDef>
	
	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_AuxBattery</defName>
		<label>auxillary battery</label>
		<description>Doubles the battery capacity of the android</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
		<timeCost>500</timeCost>
		<costList>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
	</Androids2.A2GeneDef>
	
	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_MechFlesh</defName>
		<label>mechanical body</label>
		<description>A robot made of inorganic components. Sturdier than organic components, but lacks the self regenerative properties. Adding the Synthetic Body hardware component overrides the effects of this component</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
		<statOffsets>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
		</statOffsets>

	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_SynthFlesh</defName>
		<label>synthetic body</label>
		<description>A robot made of synthetic organic components, with the ability to regenerate, but trades it for the ability to be actively repaired</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
		<timeCost>500</timeCost>
		<nutrition>100</nutrition>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_SynthWeave</defName>
		<label>synthweave composite</label>
		<description>A layer of hyperweave composite is placed under it's exterior skin, giving it a minor increase in survivability</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
		<timeCost>1200</timeCost>
		<statFactors>
			<IncomingDamageFactor>0.9</IncomingDamageFactor>
		</statFactors>
		<costList>
			<Hyperweave>25</Hyperweave>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_HeavyArmor</defName>
		<label>heavy armor</label>
		<description>The robot's normally decorative exterior panels are replaced with a plasteel armor plates, light and thin enough to not affect the robot's movement</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
		<timeCost>800</timeCost>
		<statOffsets>
			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
			<ArmorRating_Heat>0.25</ArmorRating_Heat>
		</statOffsets>
		<exclusionTags>
			<li>A2_Armor</li>
		</exclusionTags>
		<costList>
			<Plasteel>25</Plasteel>
		</costList>
	</Androids2.A2GeneDef>
	
	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_FortressArmor</defName>
		<label>heavy armor</label>
		<description>The robot's normally decorative exterior panels are replaced with a heavy steel armor plates, allowing it to survive anything smaller than a dedicated anti armor weapon. It does make the robot bulkier and slower</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
		<timeCost>800</timeCost>
		<statOffsets>
			<ArmorRating_Sharp>1.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.50</ArmorRating_Blunt>
			<ArmorRating_Heat>0.25</ArmorRating_Heat>
			<MeleeDamageFactor>0.1</MeleeDamageFactor>
			<MeleeCooldownFactor>0.5</MeleeCooldownFactor>
			<MeleeDodgeChance>-15</MeleeDodgeChance>
			<CarryingCapacity>-10</CarryingCapacity>
			<MoveSpeed>-0.1</MoveSpeed>
		</statOffsets>
		<exclusionTags>
			<li>A2_Armor</li>
		</exclusionTags>
		<costList>
			<Uranium>5</Uranium>
			<Steel>50</Steel>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_AdvancedServos</defName>
		<label>advanced servos</label>
		<description>The robot's servos are upgraded with higher speed and precision</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
		<timeCost>1200</timeCost>
		<statFactors>
		  <ShootingAccuracyFactor_Long>1.25</ShootingAccuracyFactor_Long>
		  <ShootingAccuracyFactor_Medium>1.25</ShootingAccuracyFactor_Medium>
		  <ShootingAccuracyFactor_Short>1.25</ShootingAccuracyFactor_Short>
		  <AimingDelayFactor>0.9</AimingDelayFactor>
		</statFactors>
		<statOffsets>
			<MeleeDamageFactor>0.5</MeleeDamageFactor>
			<MeleeCooldownFactor>-0.5</MeleeCooldownFactor>
			<MeleeDodgeChance>15</MeleeDodgeChance>
			<MoveSpeed>0.25</MoveSpeed>
		</statOffsets>
		<costList>
			<Plasteel>5</Plasteel>
			<Gold>5</Gold>
			<ComponentSpacer>10</ComponentSpacer>
		</costList>
	</Androids2.A2GeneDef>

	<Androids2.A2GeneDef ParentName="VREA_HardwareBase">
		<defName>A2_HeavyHydraulics</defName>
		<label>heavy hydraulics</label>
		<description>The robot's pistons are upgraded with stronger hydraulics, making it significantly stronger</description>
		<iconPath>UI/Icons/Genes/Hardware/Gene_Power</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<displayCategory>VREA_Hardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
		<isCoreComponent>false</isCoreComponent>
